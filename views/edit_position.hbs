<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">編輯職位</h1>
      {{> message}}
      <form action="/position/{{result.POSITION_ID}}?_method=PUT" method="POST">
        <div class="modal-body">

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">職位名稱</span>
            </div>
            <input type="text" class="form-control" name="POSITION_NAME" placeholder="請輸入職位名稱" aria-label="inputName"
              aria-describedby="name" value="{{ result.POSITION_NAME }}" required>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">職位資訊</span>
            </div>
            <textarea type="text" class="form-control" name="POSITION_DES" placeholder="請輸入職位需求、工作內容、薪資" aria-label="inputDes"
              aria-describedby="des" rows="10" required>{{ result.POSITION_DES }}</textarea>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/position" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>