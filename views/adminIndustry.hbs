<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">修改{{adminCompanyInfo.CPY_NAME}}產業類別</h1>
      {{> message}}
      <form action="/adminCompany/industry/{{adminCompanyInfo.CPY_ID}}?_method=PUT" method="POST">
        <div class="modal-body">

          <div class="form-group">
            <label for="industry_no">產業類別</label>
            <select name="industry_no" id="industry_no" class="form-control" required>
              <option value="" selected hidden>請選擇</option>
              {{#each industryInfo}}
              <option value="{{this.INDUSTRY_ID}}">
              {{this.INDUSTRY_NAME}}
              </option>
              {{/each}}
            </select>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/adminCompany" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>