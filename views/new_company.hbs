<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">新增公司資訊</h1>
      {{> message}}
      <form action="/company" method="POST">
        <div class="modal-body">

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text" for="category">資訊類別</label>
            </div>
            <select class="custom-select" id="category" name="category" >
              <option value="" selected hidden>請選擇</option>
              {{#each category}}
              <option value="{{this.INFO_NO}}" {{#is record.category 'housewares' }} selected {{/is}}>{{this.INFO_NAME}}</option>
              {{/each}}
            </select>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">資訊內容</span>
            </div>
            <textarea type="text" class="form-control" name="des" placeholder="請輸入資訊內容..." aria-label="inputDes"
              aria-describedby="des" value="{{ positionResult.des }}" rows="15" ></textarea>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/position" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">新增</button>
        </div>
      </form>
    </div>
  </div>
</div>