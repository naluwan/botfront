<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">新增公司補助類別</h1>
      {{> message}}
      <form action="/adminSubsidyInfo" method="POST">
        <div class="modal-body">

          <div class="input-group pt-3">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">公司補助類別名稱</span>
            </div>
            <input type="text" class="form-control new-des" name="subsidy_name" placeholder="請輸入公司補助類別名稱" value="{{subsidy_name}}" required>
          </div>

          <div class="input-group pt-3">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">公司補助類別英文名稱</span>
            </div>
            <input type="text" class="form-control new-des" name="subsidy_entity_name" placeholder="請輸入公司補助類別英文名稱" value="{{subsidy_entity_name}}" required>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/adminSubsidyInfo" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">新增</button>
        </div>
      </form>
    </div>
  </div>
</div>