<div class="container" >
  <h1>編輯 公司{{keys}}</h1>

    <form action="/company/{{keys}}?_method=PUT" method="POST" class="col-12 d-flex flex-column justify-content-center align-items-around mt-5">

      <div class="form-group mb-4 col-12 d-flex">
        <label for="{{keys}}" class="col-2">{{keys}}:</label>
        <textarea name="{{keys}}" id="{{keys}}" placeholder="enter company {{keys}}" class="form-control" rows="6">{{result}}</textarea>
      </div>
      <div class="mb-5 d-flex justify-content-center">
        <button class="btn btn-primary col-2 mx-3" type="submit">儲存</button>
        <a href="/company/edit" class="btn btn-dark active col-2" role="button">返回</a>
      </div>

</div>
